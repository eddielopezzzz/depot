<div class="depot_form">
  <% if flash[:alert] %>
  <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  
  <%= form_tag do %>
  <fieldset>
    <legend>Please Log In</legend>
    
    <div>
      <%= text_field_tag :name, params[:name], :placeholder => "Name" %>
    </div>
    <div>
      <%= password_field_tag :password, params[:password], :placeholder => "Password" %>
    </div>
    
    <div>
      <%= submit_tag "Login" %>
    </div>
  </fieldset>
  <% end %>
</div>
